<ScreenControls>
    BoxLayout:
        orientation: 'horizontal'
        pos: (0, root.height - .05*root.height)
        size_hint: (.6,.05)
        
        Button: 
            text: "Actions"
            on_press: root.show_actions()
        Button:
            text: "Settings"
            on_press: app.open_settings()

<GcodeCanvas>:
    scatterObject:scatterObject
    scatterInstance:scatterInstance
    positionIndicator:positionIndicator
    targetIndicator:targetIndicator
    
    ScatterPlane:
        do_rotation: False
        id: scatterInstance
        Label: 
            id: scatterObject
            text: ""
        PositionIndicator:
            id: positionIndicator
        PositionIndicator:
            id: targetIndicator
    
<FrontPage>:
    textconsole:textconsole
    moveDistInput:moveDistInput
    moveSpeedInput:moveSpeedInput
    gcodecanvas:gcodecanvas
    screenControls:screenControls
    
    
    GcodeCanvas:
        id: gcodecanvas
    BoxLayout:
        orientation: 'vertical'
        pos: root.width - 300, root.height - 600
        GridLayout:
            cols: 4
            size_hint: None, None
            width:300
            height: 60*4
            Button:
                text: '<^'
                on_press: root.upLeft()
            Button:
                text: '^'
                on_press: root.up()
            Button:
                text: '>^'
                on_press: root.upRight()
            Button:
                text: 'UP'
                on_press: root.zUp()
            Button:
                text: '<'
                on_press: root.left()
            Button:
                text: 'HOME'
                on_press: root.home()
            Button:
                text: '>'
                on_press: root.right()
            Button:
                text: 'DOWN'
                on_press: root.zDown()
            Button:
                text: '<\/'
                on_press: root.downLeft()
            Button:
                text: '\/'
                on_press: root.down()
            Button:
                text: '\/>'
                on_press: root.downRight()
            Button:
                text: 'Stop'
                on_press: root.stopRun()
            Button:
                text: 'Define\n  Zero'
                on_release: root.moveOrigin()
                disabled: False
            Button:
                text: 'Define\nCenter'
                on_press: root.reZero()
            Button:
                text: 'Scroll\nEnable'
                disabled: True
            Button:
                text: 'RUN'
                on_press: root.startRun()
        BoxLayout:
            orentation: 'horizontal'
            size_hint: None, None
            width: 300
            height: 30
            Button:
                id: moveDistInput
                text: '100'
                multiline: False
                size_hint_x: .4
                on_press: root.textInputPopup(self)
            TextInput:
                id: moveSpeedInput
                text: "30"
                multiline: False
                size_hint_x: .4
            Button:
                text: root.units
                on_press: root.switchUnits()
                size_hint_x: .2
        GridLayout:
            cols: 5
            size_hint: None, None
            width: 300
            height: 30
            Button:
                text: "<<10"
                on_press: root.moveGcodeIndex(-10)
            Button:
                text: "<1"
                on_press: root.moveGcodeIndex(-1)
            Button:
                text: "||"
                on_press: root.pause()
            Button:
                text: "1>"
                on_press: root.moveGcodeIndex(1)
            Button:
                text: "10>>"
                on_press: root.moveGcodeIndex(10)
        BoxLayout:
            orentation: 'horizontal'
            size_hint: None, None
            width: 300
            height: 70
            GridLayout:
                cols: 1
                Label:
                    text: root.xReadoutPos
                Label:
                    text: root.yReadoutPos
                Label:
                    text: root.zReadoutPos
            GridLayout:
                cols: 1
                Label:
                    text: "Estimated Time Remaining:"
                    font_size: '11sp'
                    disabled: True
                Label:
                    text: "TBD"
                    disabled: True
                Label:
                    text: root.gcodeLineNumber
        Label:
            text: root.connectionStatus
            size_hint: None, None
            width: 300
            height: 30
            disabled: False
        ScrollableLabel:
            id: textconsole
            size: 300, 200
            text: root.consoleText
            size_hint: None, None
    
    ScreenControls:
        id: screenControls
        size_hint: (1, 1)

<ViewMenu>:
    GridLayout:
        cols:1
        size: root.size
        pos: root.pos
        Label:
            text: "View"
        Button:
            text: 'Open File'
            on_press: root.openFile()
        Button:
            text: 'Update Gcode'
            on_press: root.reloadGcode()
        Button:
            text: 'View Gcode'
            disabled: False
            on_press: root.show_gcode()
        Button:
            text: 'Reset Origin'
            disabled: True
                
<RunMenu>:
    GridLayout:
        cols: 1
        size: root.size
        pos: root.pos
        Label:
            text: "Run"
        Button:
            text: 'Pause'
            disabled: True
        Button:
            text: 'Resume'
            disabled: True
        Button:
            text: 'Zero Z'
            disabled: True
        Button:
            text: 'Auto Zero Z'
            disabled: True

<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: root.text

<ConnectMenu>:
    GridLayout:
        cols: 1
        size: root.size
        pos: root.pos
        Label:
            text: "Connect"
        Button:
            text: 'Connect'
            on_press: root.connect()
        Spinner:
            id: ports
            text: "Ports"
            values: root.COMports
            on_text: root.setPort(ports.text)   
        Button:
            text: 'Update List'
            on_press: root.updatePorts()
                
<Diagnostics>:
    GridLayout:
        rows: 2
        size: root.size
        pos: root.pos
        Label:
            text: "Diagnostic features"
        GridLayout:
            cols: 3
            Button:
                text: 'Test Encoders'
                disabled: True
            Button:
                text: 'Test Motors'
                disabled: True
            Button:
                text: 'Test Both'
                disabled: True
            Button:
                text: 'Calibrate Motors'
                disabled: True
            Button:
                text: 'Calibrate Magnets'
                disabled: True
            Button:
                text: 'About'
                disabled: True

